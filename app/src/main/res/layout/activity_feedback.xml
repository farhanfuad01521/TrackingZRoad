<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center"
    android:weightSum="2"
    android:orientation="vertical"
    android:background="@drawable/background_u"
    tools:context=".Feedback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/background_x"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nameTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:textColor="@color/e"
            android:textSize="28dp"
            android:textStyle="bold"
            android:hint="Name" />

        <EditText
            android:id="@+id/emailTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/e"
            android:textSize="28dp"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:textStyle="bold"
            android:hint="Email" />
        <EditText
            android:id="@+id/feedbackTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/e"
            android:textSize="28dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_baseline_feedback_24"
            android:hint="Enter your feedback" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/submitButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/a"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_z"
            android:text="Submit" />

        <Button
            android:id="@+id/clearButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/a"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textSize="26dp"
            android:background="@drawable/button_z"
            android:text="Clear" />
    </LinearLayout>

</LinearLayout>